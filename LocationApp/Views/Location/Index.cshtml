@model LocationApp.Models.LocationModel
@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

<body>
    <h2>This is location app</h2>

    @if(@Model.ApiOk && @Model.DbOk){
    <p>
        Based on Your ip adress, I can read information listed below:
    </p>
    <ul>
        <li> Ip: @Model.ip</li>
        <li> Country: @Model.country_name</li>
        <li> City: @Model.city</li>
    </ul>
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <p>
                    All the records are listed on the right side. Feel free to delete them if You want. You can also add data to my database if You want.
                </p>
            </div>
            <div class="col-lg-4">
                <div class="table">
                    <table>
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Ip</th>
                                <th>Country</th>
                                <th>City</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var elem in Model.list)
                            {
                                <tr style="border:solid;">
                                    <td style="border:solid;">@elem.id</td>
                                    <td style="border:solid;">@elem.ip</td>
                                    <td style="border:solid;">@elem.country_name</td>
                                    <td style="border:solid;">@elem.city</td>
                                    <td><a href="Location/Delete?id=@elem.id">Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-lg-4">
                <form asp-action="Post" asp-controller="Location" method="post">
                    <input type="text" placeholder="Ip" name="Ip" />
                    <input type="text" placeholder="Country" name="Country" />
                    <input type="text" placeholder="City" name="City" />
                    <input type="submit" />
                </form>
            </div>
        </div>
    </div>
    }
    else
    {
        <p>There was a problem with either a Db or Api. I cannot provide you any more information.</p>
    }
</body>

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
}
